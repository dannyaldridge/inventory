<div class="login">
	<h1>Login</h1>

	<%= form_tag sessions_path do %>
		<div>
			<%= text_field_tag :name, nil, placeholder: "Name"%>
		</div>
		<div>
			<%= password_field_tag :password, nil, placeholder: "Password"%>
		</div>
		<div>
			<%= submit_tag "Log in", class: "button" %>
		</div>
		<p>Don't have a login? Register <a href="">here</a></p>
	<% end %>
</div>
