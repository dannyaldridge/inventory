<div class="login">
	<h1>Login</h1>

	<%= form_for :sessions, url: sessions_path do |f| %>
		<div>
			<%= f.text_field :name, placeholder: "Name"%>
		</div>
		<div>
			<%= f.password_field :password, placeholder: "Password"%>
		</div>
		<div>
			<%= submit_tag "Log in", class: "button" %>
		</div>
	<% end %>
</div>
